<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/med_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="10sp"
        android:background="#03A9F4"
        android:hint="Enter Medicine Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textCapSentences" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/med_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/med_name"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="@color/colorAccent"
        android:hint="Enter Type Of Medicine">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_medicine_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textCapSentences|textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/med_doses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/med_type"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="#03A9F4"
        android:hint="Enter amount of doses needed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_medicine_doses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textCapSentences|textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/med_uses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/med_doses"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="@color/colorAccent"
        android:hint="Enter medicine uses">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_medicine_uses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textCapSentences|textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/med_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/med_uses"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="#03A9F4"
        android:hint="Enter the quantity of the medicine">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_medicine_quantity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textCapSentences|textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/med_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/med_quantity"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="@color/colorAccent"
        android:hint="Enter the precautions/warning">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_medicine_warning"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textCapSentences|textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/med_expired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/med_warning"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="#03A9F4"
        android:hint="Enter the expiration date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_medicine_expired"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textCapSentences|textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>




</RelativeLayout>